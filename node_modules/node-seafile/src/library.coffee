api = require './api'

this.list = (token, cb)->
	api.get 'repos', null, token, (err, res)->
		cb err, res if cb

this.create = (token, params, cb)->
	params.name = params.name || 'New Library'
	params.desc = params.desc || 'New Library'
	api.post 'repos', params, token, (err, res)->
		cb(err, res) if cb

module.exports = this
